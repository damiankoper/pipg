{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["pixi.js", "matter-js"],
    "typeRoots": ["src"]
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"],
}
