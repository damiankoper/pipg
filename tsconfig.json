{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "lib": ["es5", "dom", "es6"],
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["pixi.js", "matter-js"],
    "typeRoots": ["src"]
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
